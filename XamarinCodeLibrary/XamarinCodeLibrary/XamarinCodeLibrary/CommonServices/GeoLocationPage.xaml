<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinCodeLibrary.CommonServices.GeoLocationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Latitude" x:Name="LabelLatitude"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Aptitude" x:Name="LabelAptitude"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" />
            <Label Text="Longtitude" x:Name="LabelLongtitude"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Show" Clicked="Button_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>